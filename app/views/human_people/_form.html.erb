<%= form_for @person do |f| %>

  <div>
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

  <div>
    <%= f.label :age %>
    <%= f.text_field :age %>
  </div>
  <div>
    <%= f.label :hair_color %>
    <%= f.text_field :hair_color %>
  </div>


  <div>
   <%= f.label :eye_color %>
   <%= f.text_field :eye_color %>
 </div>

  <div>
   <%= f.label :gender %>
   <%= f.text_field :gender %>
 </div>

  <div>
   <%= f.label :alive %>
   <%= f.select :alive, [['yes', true ], ['no', false]] %>
  </div>

<%= f.submit %>


<% end %>
